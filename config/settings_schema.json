      },
      {
        "type": "color", 
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#1f2937"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
