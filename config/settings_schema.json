[
  {
    "name": "theme_info",
    "theme_name": "Orion",
    "theme_version": "1.0.0",
    "theme_author": "Evan Skoulikaritis",
    "theme_documentation_url": "https://help.shopline.com",
    "theme_support_url": "https://help.shopline.com"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#dc2626"
      },
      {
        "type": "color", 
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#1f2937"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "sans-serif",
        "label": "Header font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "sans-serif",
        "label": "Body font"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "group_header",
        "label": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "X (Twitter)",
        "info": "https://twitter.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourstorename"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstorename"
      },
      {
        "type": "text",
        "id": "social_linkedin_link",
        "label": "LinkedIn",
        "info": "https://linkedin.com/company/yourstorename"
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "group_header",
        "label": "Button styles"
      },
      {
        "type": "range",
        "id": "button_border_radius",
        "min": 0,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Button border radius",
        "default": 6,
        "info": "Controls the roundness of all buttons"
      },
      {
        "type": "group_header",
        "label": "Primary button"
      },
      {
        "type": "color",
        "id": "button_primary_bg",
        "label": "Background color",
        "default": "#dc2626"
      },
      {
        "type": "color",
        "id": "button_primary_bg_hover",
        "label": "Background hover color",
        "default": "#b91c1c"
      },
      {
        "type": "color",
        "id": "button_primary_text",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "group_header",
        "label": "Secondary button"
      },
      {
        "type": "color",
        "id": "button_secondary_bg",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "button_secondary_bg_hover",
        "label": "Background hover color",
        "default": "#f9fafb"
      },
      {
        "type": "color",
        "id": "button_secondary_text",
        "label": "Text color",
        "default": "#374151"
      },
      {
        "type": "color",
        "id": "button_secondary_border",
        "label": "Border color",
        "default": "#d1d5db"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "range",
        "id": "free_shipping_threshold",
        "min": 0,
        "max": 500,
        "step": 5,
        "unit": "$",
        "default": 50,
        "label": "Free shipping threshold",
        "info": "Minimum order amount for free shipping promotion"
      },
      {
        "type": "switch",
        "id": "show_free_shipping_bar",
        "default": true,
        "label": "Show free shipping progress bar"
      },
      {
        "type": "group_header",
        "label": "Notifications"
      },
      {
        "type": "switch",
        "id": "enable_notifications",
        "default": true,
        "label": "Enable notifications",
        "info": "Show success and error messages when adding items to cart"
      },
      {
        "type": "select",
        "id": "notification_position",
        "options": [
          {
            "value": "top-right",
            "label": "Top right"
          },
          {
            "value": "top-left",
            "label": "Top left"
          },
          {
            "value": "bottom-right",
            "label": "Bottom right"
          },
          {
            "value": "bottom-left",
            "label": "Bottom left"
          },
          {
            "value": "top-center",
            "label": "Top center"
          },
          {
            "value": "bottom-center",
            "label": "Bottom center"
          }
        ],
        "default": "top-right",
        "label": "Notification position"
      },
      {
        "type": "range",
        "id": "notification_duration",
        "min": 1000,
        "max": 10000,
        "step": 500,
        "unit": "ms",
        "default": 3000,
        "label": "Auto-dismiss duration",
        "info": "How long notifications stay visible before automatically disappearing"
      },
      {
        "type": "range",
        "id": "notification_max_count",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 5,
        "label": "Maximum notifications",
        "info": "Maximum number of notifications to show at once"
      },
      {
        "type": "switch",
        "id": "notification_show_close_button",
        "default": true,
        "label": "Show close button",
        "info": "Allow users to manually close notifications"
      },
      {
        "type": "switch",
        "id": "notification_show_product_name",
        "default": true,
        "label": "Show product name in notifications",
        "info": "Include product name in add to cart success messages"
      }
    ]
  }
]